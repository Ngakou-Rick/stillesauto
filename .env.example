# Stilles Auto - Variables d'Environnement
# Copiez ce fichier en .env.local et remplissez les valeurs

# Application
NEXT_PUBLIC_APP_NAME="Stilles Auto"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Backend (à configurer plus tard)
NEXT_PUBLIC_API_URL="http://localhost:4000/api"

# Base de données (à configurer plus tard)
DATABASE_URL="postgresql://user:password@localhost:5432/stilles_auto"

# Authentification JWT (à configurer plus tard)
JWT_SECRET="votre-secret-jwt-tres-securise"
JWT_EXPIRES_IN="7d"

# Email (à configurer plus tard)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="votre-email@gmail.com"
SMTP_PASSWORD="votre-mot-de-passe"
EMAIL_FROM="Stilles Auto <noreply@stillesauto.cm>"

# SMS (à configurer plus tard)
TWILIO_ACCOUNT_SID="votre-twilio-sid"
TWILIO_AUTH_TOKEN="votre-twilio-token"
TWILIO_PHONE_NUMBER="+237XXXXXXXXX"

# Paiements Mobile Money (à configurer plus tard)
MTN_MOMO_API_KEY="votre-cle-api-mtn"
MTN_MOMO_API_SECRET="votre-secret-mtn"
ORANGE_MONEY_API_KEY="votre-cle-api-orange"
ORANGE_MONEY_API_SECRET="votre-secret-orange"

# Stripe (optionnel, pour paiements par carte)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# Google Maps (optionnel)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="votre-cle-google-maps"

# Analytics (optionnel)
NEXT_PUBLIC_GA_TRACKING_ID="UA-XXXXXXXXX-X"

# Cloudinary (optionnel, pour upload d'images)
CLOUDINARY_CLOUD_NAME="votre-cloud-name"
CLOUDINARY_API_KEY="votre-api-key"
CLOUDINARY_API_SECRET="votre-api-secret"

# Environnement
NODE_ENV="development"
